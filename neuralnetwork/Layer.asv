classdef Layer
    properties
        weights
        outputs
        theta
        thetaPrime
    end
    
    methods
        function h = forward(obj, xPrev)
            s = dot(obj.weights, xPrev);
            obj.outputs = [1 obj.theta(s)];
            h = obj.outputs;
        end
        
        function back(obj, deltaPrev)
            delta = obj.thetaPrime(obj.outputs(2:));
        end
    end
end
